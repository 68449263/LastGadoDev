<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/TextAppearance.DeviceDefault.Medium"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5ef"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/RouteDetailsBottomSheetCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5ef"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="26dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_yellow_train"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/BottomSheetdepatureTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:textColor="#08241E"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:text="Departure"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:textColor="#08241E"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:text="to"/>

                            <TextView
                                android:id="@+id/BottomSheetdestinationTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:maxLines="1"
                                android:textColor="#08241E"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:text="Destination "/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/bottomSheetTrainId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginStart="45dp"
                            android:gravity="center"
                            android:text="0054"
                            android:textColor="#08241E"
                            android:textSize="23dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="12.5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="#f9f9f9"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_vintage_clock"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#08241E"
                        android:textSize="13dp"
                        android:text="20 minutes delayed "/>

                    <Button
                        android:id="@+id/toggleBottomSheetState"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_vertical|end"
                        android:background="@drawable/ic_plus"
                        android:textColor="#08241E"
                        android:textAllCaps="false"
                        android:elevation="0dp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


            <LinearLayout
                android:id="@+id/scheduleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_gradient"
                android:orientation="vertical"
                android:layout_weight="2"
                android:visibility="visible"
                android:padding="5dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="20dp"
                            android:layout_weight="0.5"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calendar" />

                        <Button
                            android:background="@drawable/gradientbackground"
                            style="?android:attr/borderlessButtonStyle"
                            android:id="@+id/scheduleButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Schedule Notification"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#fff"/>

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="20dp"
                            android:layout_weight="0.5"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_notifications" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RV_Schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5ef" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/lightbackgroundshape"
        android:id="@+id/cancelTracking"
        android:textAlignment="center"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffbb00" />

</LinearLayout>